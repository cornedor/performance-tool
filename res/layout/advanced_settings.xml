<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/io_scheduler" />

    <Spinner
        android:id="@+id/ioSchedulerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/suspendCapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/suspend_cap" />

    <Spinner
        android:id="@+id/suspendCapSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/audioCapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio_cap" />

    <Spinner
        android:id="@+id/audioCapSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cpqGovernorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpq_governor" />

    <Spinner
        android:id="@+id/cpqGovernorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/advanced_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="applyAdvancedSettings"
            android:text="@string/apply" />

    </LinearLayout>

</LinearLayout>
